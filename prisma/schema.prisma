generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id        Int     @id @default(autoincrement())
  title     String
  summary   String?
  ISBN      String   @unique
  url       String?


  authorId  Int
  author    Author  @relation(fields: [authorId], references: [id])

  genreId   Int?
  genre     Genre?  @relation(fields: [genreId], references: [id])
}

model Author {
  id          Int     @id @default(autoincrement())
  firstName   String
  familyName  String
  dateOfBirth DateTime?
  dateOfDeath DateTime?
  name        String   @unique
  lifespan    String?
  url         String?

  books       Book[]
}

model Genre {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  url   String?

  books Book[]
}

